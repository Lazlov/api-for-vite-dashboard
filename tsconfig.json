{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "node",
    "lib": ["ES2020"], // Include only ES2020 and exclude DOM
    "types": ["node"], // Use Node.js types
    "skipLibCheck": true, // Skip type checks for declarations,
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "strict": true
  }
}


